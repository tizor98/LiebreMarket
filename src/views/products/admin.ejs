<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include("../partials/head", {title: 'Products admin'}) %>

<body>
   
   <!-- Header -->
   <%- include("../partials/header") %>

   <main>
      <% if(products) { %>
         <% products.forEach(product => { %>
            <article>
               <strong><p class="description"><%= product.name %></p></strong>
               <img src="/img/products/<%= product.img %>" alt="Imagen del Macbook">
               
               <div class="details-info">
                  <span  class="icon-product">
                     <i class="fas fa-shipping-fast"></i>
                  </span>
                  
                  <div class="align-prices">
                     <p class="prices">$<%= product.price %></p>
                     <p class="discound"><%= product.discount %>% off</p>
                  </div>
               </div>
            </article>
         <% }) %>  
      <% } %>  
   </main>
   
   <!-- Footer -->
   <%- include("../partials/footer")%>

</body>
</html>